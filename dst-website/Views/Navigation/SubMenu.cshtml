@using dst_website.Models
@model IList<MenuItemViewModel>
@{
    if (Model.Count > 0)
    {
        <div class="submenu">
            @foreach (MenuItemViewModel item in Model)
            {
                <a href="@item.Url" class="@(Request.Path == item.Url ? "submenu-active" : null)">@item.Caption</a>
            }
        </div>
    }
}
