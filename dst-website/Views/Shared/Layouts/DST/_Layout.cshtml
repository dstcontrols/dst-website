@* ReSharper disable Html.PathError *@
@{ Layout = "~/Areas/bcms-Root/Views/Shared/BaseLayout.cshtml"; }
@* ReSharper restore Html.PathError *@
@using BetterCms.Module.Root.Mvc.Helpers
@model BetterCms.Module.Root.ViewModels.Cms.RenderPageViewModel

@section HeadScripts {
    @Html.Partial("~/Views/Shared/Layouts/DST/_HeadScripts.cshtml")


    @RenderSection("HeadScripts", false)
}

@* ReSharper disable once Razor.SectionNotResolved *@
@section BodyTag {
    <body class="sticky_header" @Html.RenderBodyAttributes()>
}
<div class="overflow_wrapper">
    @Html.Partial("~/Views/Shared/Layouts/DST/_Header.cshtml")


    @if (Model.Title.ToLower() != "home")
    {
        <div class="full_page_photo" style="background-image: url(~/Content/images/cleanstart-1.0.1/about_us.jpg);">
            <div class="hgroup">
                <div class="hgroup_title animated bounceInUp">
                    <div class="container">
                        <h1 class="">@Model.Title</h1>
                    </div>
                </div>
                <div class="hgroup_subtitle animated bounceInUp skincolored">
                    <div class="container">
                        <p>Placeholder text</p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <section id="slider_wrapper" class="slider_wrapper full_page_photo">
            <div id="main_flexslider" class="flexslider">
                <ul class="slides">
                    <li class="item" style="background-image: url(/Content/images/cleanstart-1.0.1/1.jpg)">
                        <div class="container">
                            <div class="carousel-caption animated bounceInUp">
                                <h1>
                                    <strong>World-Class solutions</strong><br>
                                    from control room to board room
                                </h1>
                                <p class="lead skincolored">
                                    Cleanstart is based on fine typography and large photography,<br>
                                    serving as a foundation for your creative projects.
                                </p>
                            </div>
                        </div>
                    </li>
                    <li class="item" style="background-image: url(/Content/images/cleanstart-1.0.1/2.jpg)">
                        <div class="container">
                            <div class="carousel-caption animated bounceInUp">
                                <h1>
                                    Makes real use<br>
                                    of the <strong>powerfull</strong> {less} syntax!
                                </h1>
                                <p class="lead skincolored">
                                    Cleanstart was built with heavy use of {less} technology, <br>
                                    making the life of the web developer easier!
                                </p>
                            </div>
                        </div>
                    </li>
                    <li class="item" style="background-image: url(/Content/images/cleanstart-1.0.1/3.jpg)">
                        <div class="container">
                            <div class="carousel-caption animated bounceInUp">
                                <h1>
                                    Utilizes subtle animations<br>
                                    to serve a <strong>minimal</strong> approach
                                </h1>
                                <p class="lead skincolored">
                                    Cleanstart is designed to mainly promote your content<br>
                                    in a simple yet exciting & elegant way
                                </p>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </section>
    }



    <div class="main" style="@(Model.Title.ToLower() != "home" ? "top: 480px;" : "")">
        @Html.Partial("~/Views/Shared/Layouts/DST/_CleanStartTriangles.cshtml")

        @*<section>
            <div class="default-messages-container">
                <div class="error-user-message-container">
                    <ins class="icon-static"></ins>
                    <div class="error user-message">
                    </div>
                </div>
                <div class="success-user-message-container">
                    <ins class="icon-static"></ins>
                    <div class="success user-message">
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>

        </section>*@

        @RenderSection("MainContent", false)
        @RenderBody()





        @Html.Partial("~/Views/Shared/Layouts/DST/_Footer.cshtml")



    </div><!-- .main -->           
        
    @section Scripts {
        @Html.Partial("~/Views/Shared/Layouts/DST/_Scripts.cshtml")
        @RenderSection("Scripts", false)
    }     
        


</div><!-- .overflow_wrapper -->
